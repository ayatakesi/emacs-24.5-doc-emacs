#: misc.texi.orig:1041
#, no-wrap
msgid "C-c C-p"
msgstr "C-c C-p"

#. type: table
#: misc.texi.orig:1043
msgid "Move point to the previous prompt (@code{comint-previous-prompt})."
msgstr "前のプロンプトにポイントを移動します(@code{comint-previous-prompt})。"

#. type: kindex
#: misc.texi.orig:1044
#, no-wrap
msgid "C-c C-n @r{(Shell mode)}"
msgstr "C-c C-n @r{(Shell mode)}"

