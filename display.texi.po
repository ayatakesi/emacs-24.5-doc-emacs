#. type: section
#: display.texi.orig:1044
#, no-wrap
msgid "Window Fringes"
msgstr "Window Fringes"

#. type: cindex
#: display.texi.orig:1045
#, no-wrap
msgid "fringes"
msgstr "fringes"

#. type: findex
#: display.texi.orig:1047
#, no-wrap
